{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/utf-8",
                "/EHsc",
                "${file}",
                "/Fe:${workspaceFolder}/obj/a.exe",
                "/Fo${workspaceFolder}/obj/",
                "/I${workspaceFolder}/lib"
                // "/ID:All_programs/C++/JianZhiOffer/lib"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Generated task by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}